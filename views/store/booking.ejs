  display: flex;
  gap: 12px;
  margin-bottom: 20px;
  flex-wrap: wrap;
}

.radio-tile {
  flex: 1 1 45%;
  background: #fff;
  border: 2px solid #ccc;
  border-radius: 12px;
  padding: 14px 18px;
  text-align: center;
  font-weight: 500;
  cursor: pointer;
  transition: 0.3s ease;
  position: relative;
  box-shadow: 0 4px 10px rgba(0,0,0,0.06);

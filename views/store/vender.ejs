    /* --- CARDS --- */
.cards-container {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(160px, 1fr)); /* 2+ columns automatically */
  gap: 16px;
  padding: 12px;
  justify-items: center;
  justify-content: center;     /* üëà center the columns */
  max-width: 1200px;           /* üëà optional, controls how wide */
  margin: 0 auto; 
}

.card {
  position: relative;
  background: #ffffff6f;
  border-radius: 14px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
  overflow: hidden;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  width: 100%; /* grid controls width */
  /* border: 1px solid #f0f0f0; */
}

.card:hover {
  transform: translateY(-4px);
  box-shadow: 0 6px 16px rgba(0,0,0,0.08);
}

.card img {
  width: 100%;
  height: 120px;  /* shorter height */
  object-fit: cover;
  border-radius: 14px 14px 0 0;
}

.content {
  padding: 8px;
  text-shadow: #fff 10px 20px 30px;
}

.card h3 {
  /* margin: 4px 0 2px; */
  font-size: 15px;
  font-weight: 600;
  color: #333;
  text-align: left;
}

.card p {
  margin: 0;
  font-size: 13px;
  color: #333;
  text-align: left;
}
.card p .location{

<%- include('../partials/head') %>
<%- include('../partials/background') %>

<style>
    body {
        font-family: 'Poppins', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        /* min-height: 100vh; */
    }


    .grayscale {
  filter: grayscale(100%);
}

.fav-vendor {
  border: 3px solid gold; /* or any style to indicate favourite */
}


    h1 {
        text-align: center;
        margin-top: 40px;
        color: #ff4d4f;
        font-size: 40px;
        letter-spacing: 2px;
        font-weight: 700;
        /* text-shadow: 0 2px 8px #ffd6d6; */
        animation: fadeInDown 0.8s ease forwards;
    }

    .cards-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 32px;
        padding: 18px 10px 0 10px;
        max-height: 135vh;
        overflow: hidden;
    }

    .card {
        background: linear-gradient(135deg, #fff 60%, #fff0f6 100%);
        border-radius: 22px;
        box-shadow: 0 8px 32px rgba(255, 77, 79, 0.09), 0 2px 8px rgba(255, 77, 79, 0.08);
        overflow: hidden;
        width: 300px;
        transition: transform 0.3s, box-shadow 0.3s;
        border: 2px solid #ffe5e5;
        position: relative;
    }

    .card:hover {
        transform: translateY(-10px) scale(1.03);
        box-shadow: 0 16px 40px rgba(255, 77, 79, 0.18);
    }

    .card img {
        width: 100%;
        height: 180px;
        object-fit: cover;
        border-top-left-radius: 22px;
        border-top-right-radius: 22px;
        transition: transform 0.4s, filter 0.4s;
    }

    .card img:hover {
        transform: scale(1.08);
        /* filter: brightness(1.1) saturate(1.2); */
    }

    .content {
        padding: 8px 8px 6px 8px;
    }

    .card h3 {
        margin: 10px 0 6px;
        color: #2c3e50;
        font-size: 22px;
        font-weight: 600;
        letter-spacing: 1px;
    }

    .card p {
        margin: 4px 0;
        color: #555;
        font-size: 15px;
        text-align: left;
    }

    .reserve {
        background: linear-gradient(90deg, #3bd303 60%, #028f0e 100%);
        color: white;
        border: none;
        border-radius: 30px;
        padding: 11px 22px;
        margin-top: 12px;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        transition: 0.3s;
        box-shadow: 0 4px 16px rgba(255, 77, 79, 0.18);
        letter-spacing: 1px;
    }

    .reserve:hover {
        background: linear-gradient(90deg, #028f0e 100%, #3bd303 60%);
        transform: scale(1.07);
        box-shadow: 0 8px 24px rgba(255, 77, 79, 0.22);
    }

    .fav-btn {
        position: absolute;
        right: 5%;
        z-index: 2;
    }

    .fav-btn img {
        width: 28px;
        height: 28px;
        transition: all 0.3s;
        border-radius: 50%;
        background: #ffffff00;
        padding: 2px;
    }

    #favImg1 {
        filter: grayscale(1);
    }

    #favImg1:hover {
        transform: scale(1.2) rotate(10deg);
        filter: brightness(1.0);
    }

    #favImg2:hover {
        transform: scale(1.2) rotate(-10deg);
        filter: grayscale(1);
    }

    h2 {
        text-align: center;
        color: #ff4d4f;
        margin-top: 48px;
        font-size: 150%;
        font-weight: 700;
        letter-spacing: 1px;
        /* text-shadow: 0 2px 8px #ffd6d6; */
    }

    h3, p {
        text-align: center;
        padding: 0 15px;
        /* text-shadow: #ffe5ec 0px 2px 8px; */
    }

    .promo-image-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 48px 0 32px 0;
    }

    .promo-image {
        max-width: 90vw;
        width: 500px;
        height: auto;
        border-radius: 26px;
        box-shadow: 0 10px 32px rgba(255, 77, 79, 0.13), 0 2px 8px rgba(255, 183, 197, 0.13);
        transition: transform 0.4s cubic-bezier(.4,2,.3,1), box-shadow 0.4s;
        object-fit: cover;
    }

    .promo-image:hover {
        transform: scale(1.04) rotate(-1deg);
        box-shadow: 0 16px 48px rgba(255, 183, 197, 0.22), 0 4px 16px rgba(255, 77, 79, 0.13);
        filter: brightness(1.08) saturate(1.1);
    }

    /* --- OFFERS SECTION --- */
    .offers-section {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 28px;
        margin: 36px 0 0 0;
    }

    .offer-card {
        background: linear-gradient(120deg, #fffbe6 60%, #ffe5ec 100%);
        border-radius: 18px;
        box-shadow: 0 6px 24px rgba(255, 183, 197, 0.13);
        width: 320px;
        padding: 28px 22px 22px 22px;
        margin: 0 0 16px 0;
        border: 2px solid #ffb347;
        position: relative;
        transition: transform 0.3s, box-shadow 0.3s;
        text-align: left;
    }

    .offer-card:hover {
        transform: translateY(-6px) scale(1.03);
        box-shadow: 0 12px 32px rgba(255, 183, 197, 0.22);
        border-color: #ff4d4f;
    }

    .offer-card h3 {
        color: #ff4d4f;
        font-size: 20px;
        margin-bottom: 10px;
        font-weight: 700;
        letter-spacing: 1px;
        text-align: left;
    }

    .offer-card p {
        color: #444;
        font-size: 15px;
        margin-bottom: 0;
        text-align: left;
    }

    .offer-badge {
        position: absolute;
        top: -18px;
        left: 18px;
        background: linear-gradient(90deg, #ffb347 60%, #ff4d4f 100%);
        color: #fff;
        font-size: 13px;
        font-weight: 700;
        padding: 6px 18px;
        border-radius: 16px;
        box-shadow: 0 2px 8px #ffd6d6;
        letter-spacing: 1px;
    }

    /* --- Birthday & Delivery Offers --- */
    .special-offer {
        background: linear-gradient(90deg, #fffbe6 60%, #ffe5ec 100%);
        border-radius: 18px;
        box-shadow: 0 6px 24px rgba(255, 183, 197, 0.13);
        width: 90%;
        max-width: 700px;
        margin: 24px auto 0 auto;
        padding: 28px 22px 22px 22px;
        border: 2px solid #ffb347;
        text-align: center;
        font-size: 17px;
        color: #ff4d4f;
        font-weight: 600;
        position: relative;
    }

    .special-offer strong {
        color: #ff4d4f;
    }

    .special-offer .emoji {
        font-size: 28px;
        vertical-align: middle;
        margin-right: 6px;
    }

    /* Remove underlines from all links inside .card */
    .card a {
        text-decoration: none !important;
        color: inherit;
    }

    /* Remove underline from RESERVE button link */
    .card .reserve {
        text-decoration: none !important;
    }

    .img1 {
    position: absolute;
    top: 15%;
    left: 2.5%;
    width: 25vw;
    aspect-ratio: 1 / 1;
    object-fit: cover;
    border-radius: 42% 58% 65% 35% / 40% 30% 70% 60%;
    transition: transform 0.4s ease;
    z-index: -2;
    }
    .img2 {
    position: absolute;
    top: 40%;
    right: 2.5%;
    width: 25vw;
    aspect-ratio: 1 / 1;
    object-fit: cover;
    border-radius: 100% 50% 100% 50% / 60% 40% 60% 40%;
    transition: transform 0.3s ease;
    z-index: -2;
}
    .img3 {
    position: absolute;
    top: 95%;
    left: 2.5%;
    width: 25vw;
    aspect-ratio: 1 / 1;
    object-fit: cover;
    border-radius: 50% 100% 50% 100% / 40% 60% 40% 60%;
    transition: transform 0.3s ease;
    z-index: -2;
    }
    .img4{
    position: absolute;
    bottom: -90%;
    right: 2.5%;
    width: 25vw;
    aspect-ratio: 1 / 1;
    object-fit: cover;
    border-radius: 50% 100% 50% 100% / 40% 60% 40% 60%;
    transition: transform 0.3s ease;
    z-index: -2;
    }

    

    @media (max-width: 900px) {
        .cards-container, .offers-section {
            flex-direction: row;
            align-items: center;
            gap: 18px;
        }
        .card, .offer-card {
            width: 90%;
            min-width: 0;
        }
    }

    @media (max-width: 480px) {
        .card, .offer-card, .special-offer {
            width: 90%;
            padding: 16px 8px 12px 8px;
        }
        .promo-image {
            width: 98vw;
        }
    }
    .cards-container{
        max-height: 438vh;
    }

    @keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    .location {
  max-width: 250px;   /* adjust width */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: inline-block;
  vertical-align: middle;
}
</style>


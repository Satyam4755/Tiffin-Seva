<% if (messages.success && messages.success.length > 0) { %>
  <script>
    alert("<%= messages.success[0] %>");
  </script>
<% } %>

<div class="mainDabba">

  <img src="/IMG_3134.jpg" class="img1" alt="image">
  <img src="/IMG_3108.jpg" class="img2" alt="image">

  <div class="vender-details-container">

    <!-- ✅ Banner Image -->
    <div class="vender-image-wrapper">
      <img class="vender-image" src="<%= vender.bannerImage || '/default.jpg' %>" alt="Vendor Banner">
    </div>

    <!-- ✅ Service Info -->
    <div class="vender-content">
      <h2><%= vender.serviceName %></h2>
      <p><strong>Location:</strong> <%= vender.location %></p>
      <p><strong>Price Per Day:</strong> ₹<%= vender.pricePerDay %></p>
      <p><strong>Price Per Month:</strong> ₹<%= vender.pricePerMonth %></p>
      
      <!-- ✅ Ratings -->
      <p>
        <strong>Ratings:</strong>
        <% for (let i=1; i <= Math.round(averageRating); i++) { %>⭐<% } %>
        (<%= averageRating %>/5)
      </p>

      <!-- ✅ Customers Served -->
      <p>
        <strong>Total Customers Served:</strong>
        <%= numberOfOrders %>
      </p>


      <div class="action-buttons">
        <!-- ✅ REVIEWS BUTTON -->
        <button class="btn review-btn" onclick="toggleReviews()">💬 Reviews</button>
        <!-- ✅ MENU BUTTON -->
        <button class="btn menu-btn" onclick="toggleMenu()">🍽 Show Menu</button>

        <!-- for reserve, fav -->
         <% if (showOptions) { %>
                <a href="/user/booking/<%= vender._id %>">
                    <button class="btn">Reserve Now</button>
                </a>
                <form action="/user/favourite_list" method="post" class="fav-btn">
                    <input type="hidden" name="venderId" value="<%= vender._id %>">
                    <% if(opacity[vender._id] == 10) { %>
                        <button onclick="loading()" type="submit" style="background: none; border: none;cursor: pointer;">
                            <img id="favImg2" src="/pngtree-red-3d-heart-emoji-realistic-shadow-png-image_4539964.png" alt="Favourite">
                        </button>
                    <% } else { %>
                        <button onclick="loading()" type="submit" style="background: none; border: none;cursor: pointer;">
                            <img id="favImg1" src="/pngtree-red-3d-heart-emoji-realistic-shadow-png-image_4539964.png" alt="Favourite">
                        </button>
                    <% } %>
                </form>
            <% } else if (!isLogedIn) { %>
                <a href="/logIn">
                    <button class="btn">Login to Reserve</button>
                </a>
            <% } %>
      </div>
    </div>
  </div>

  <!-- ✅ Vendor (User) Details -->
  <div class="organizer-box">
    <h3 style="color: #d63384;">👑 Vendor</h3>
    <div class="organizer-profile">
      <img src="<%= vender.profilePicture || '/user.jpeg' %>" class="organizer-img" />
      <div class="organizer-info">
        <p><strong><%= vender.firstName %> <%= vender.lastName %></strong></p>
        <p><strong>Email:</strong> <%= vender.email %></p>
      </div>
    </div>
  </div>

  <!-- ✅ Customers -->
  <% if (guestUsers && guestUsers.length > 0) { %>
    <div class="attendees-section">
      <h3 style="color: #6c5ce7;">👥 Customers (<%= guestUsers.length %>)</h3>
      <div class="attendee-grid">
        <% guestUsers.forEach(guest => { %>
          <div class="attendee-card">
            <img src="<%= guest.profilePicture || '/user.jpeg' %>" class="attendee-img" />
            <p><%= guest.firstName %> <%= guest.lastName || '' %></p>
          </div>
        <% }) %>
      </div>
    </div>
  <% } %>

  <!-- ✅ Back Button -->
  <a href="/" style="text-decoration: none;">
    <button class="btn back-btn">Go Back To Home</button>
  </a>

  <!-- Overlay -->
  <div id="overlay" class="overlay hidden"></div>

  <!-- ✅ Reviews Popup -->
  <div id="reviewsPanel" class="reviews-panel hidden">
    <button class="close-btn" style="background: none;" onclick="removePanel('reviewsPanel')">X</button>
    <h3 style="text-align:center; color:#6c5ce7;">Reviews</h3>
    <div class="review_list">
      <% if (reviews && reviews.length > 0) { %>
          <% reviews.forEach(review => { %>
              <div class="review-item">
                  <p><strong><%= review.user.firstName || 'Anonymous' %> <%= review.user.lastName %>:</strong></p>
                  <p><%= review.comment %></p> 
                  <p>
                      Rating:
                      <% for (let i = 0; i < review.rating; i++) { %>
                          ⭐
                      <% } %>
                      (<%= review.rating %>/5)
                  </p>
              </div>
          <% }); %>
      <% } else { %>
          <p style="text-align:center; color:#555;">No reviews yet!</p>
      <% } %>
    </div>

    <!-- Add Yours button -->
    <%
    let userReview = null;
    if (reviews && reviews.length > 0) {
        userReview = reviews.find(review => review.user._id.toString() === user._id.toString());
    }
    %>
    <% if (userReview) { %>
        <form action="/user/delete-review/<%= vender._id %>" method="POST" style="text-align:center; margin-top: 10px;">
            <input type="hidden" name="reviewId" value="<%= userReview._id %>">
            <button onclick="loading()" type="submit" class="add_btn" style="background-color: #e74c3c;">Delete Your Review</button>
        </form>
    <% } else { %>
        <button class="add_btn" onclick="toggleReviewForm()">Add Yours!</button>
    <% } %>

    <!-- Hidden review form popup -->
    <div id="reviewFormPopup" class="review-form-popup hidden">
        <form action="/user/vender-list/<%= vender._id %>" method="POST"> 
            <textarea
                id="reviewText"
                name="Review"
                placeholder="Write your review here..."
                required
            ></textarea>
            <input id="rating" type="number" name="Rating" placeholder="⭐ Rating (1-5)" min="1" max="5" required>
            <button type="submit" class="submit_btn" onclick="loading()">Submit</button>
        </form>
    </div>
  </div>

 <!-- ✅ MENU Popup -->
<div id="menuPanel" class="menu-panel hidden">
  <!-- Close (X) Button -->
  <button class="close-btn" onclick="removePanel('menuPanel')">✕</button>
  <h3 style="text-align:center; color:#6c5ce7;">Weekly Menu</h3>

  <div class="menu-content">
    <% if (menuByDay && Object.keys(menuByDay).length > 0) { %>
      <% const days = ["monday","tuesday","wednesday","thursday","friday","saturday","sunday"]; %>
      
      <div class="all-days-container">
        <% days.forEach(day => { %>
          <div class="day-section">
            <h4 class="day-title"><%= day.charAt(0).toUpperCase() + day.slice(1) %></h4>
            <div class="meal-container">
              <% ["lunch","dinner"].forEach(type => { %>
                <div class="meal-card">
                  <% const meal = menuByDay[day] && menuByDay[day][type]; %>
                  <% if (meal && meal.items && meal.items.length > 0) { %>
                    <div class="meal-box">
                      <img src="<%= meal.image || '/default1.jpeg' %>" alt="<%= type %>">
                      <div class="meal-info">
                        <strong><%= type.charAt(0).toUpperCase() + type.slice(1) %></strong>
                        <p><%= meal.items.join(", ") %></p>
                      </div>
                    </div>
                  <% } else { %>
                    <div class="meal-box">
                      <img src="/default1.jpeg" alt="<%= type %>">
                      <div class="meal-info">
                        <strong><%= type.charAt(0).toUpperCase() + type.slice(1) %></strong>
                        <p>No items available</p>
                      </div>
                    </div>
                  <% } %>
                </div>
              <% }) %>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p style="text-align:center; color:#555;">No menu added yet!</p>
    <% } %>
  </div>
</div>

<!-- ✅ Script -->
<script>
function toggleMenu() {
  const panel = document.getElementById('menuPanel');
  showPanel(panel);
}

function showPanel(panel) {
  const overlay = document.getElementById('overlay');
  const vender_detailsContainer = document.querySelector('.vender-details-container');
  vender_detailsContainer.classList.add('blured');
  panel.classList.remove('hidden');
  overlay.classList.remove('hidden');
}

function removePanel(id) {
  const panel = document.getElementById(id);
  const overlay = document.getElementById('overlay');
  const vender_detailsContainer = document.querySelector('.vender-details-container');
  panel.classList.add('hidden');
  overlay.classList.add('hidden');
  vender_detailsContainer.classList.remove('blured');
}


// for reviews
function toggleReviews() {
  const panel = document.getElementById('reviewsPanel');
  const overlay = document.getElementById('overlay');
  const vender_detailsContainer = document.querySelector('.vender-details-container');

  vender_detailsContainer.classList.add('blured');
  panel.classList.remove('hidden');
  overlay.classList.remove('hidden');
}
function toggleReviewForm() {
    const popup = document.getElementById("reviewFormPopup");
    popup.classList.toggle("hidden");
}
function removePanel() {
  const panel = document.getElementById('reviewsPanel');
  const overlay = document.getElementById('overlay');
  const vender_detailsContainer = document.querySelector('.vender-details-container');

  panel.classList.add('hidden');
  overlay.classList.add('hidden');
  vender_detailsContainer.classList.remove('blured');
}
</script>




<%- include('../partials/head') %>
<%-include('../partials/background')%>
<style>
body {
    font-family: 'Segoe UI', Arial, sans-serif;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    margin: 0;
    padding: 0;
}

.mainDabba {
    max-width: 900px;
    margin: 40px auto;
    background: blanchedalmond;
    border-radius: 18px;
    box-shadow: 0 8px 32px rgba(44, 62, 80, 0.15);
    padding: 32px 24px 24px 24px;
    position: relative;
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.img1, .img2 {
    position: absolute;
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 14px;
    margin: 0 8px 16px 0;
    box-shadow: 0 2px 8px rgba(44,62,80,0.09);
    z-index: -2;
}

.vender-details-container {
    display: flex;
    gap: 32px;
    align-items: flex-start;
    margin-top: 16px;
    transition: filter 0.3s;
}

.vender-details-container.blured {
    filter: blur(3px) brightness(0.9);
}

.vender-image-wrapper {
    flex: 0 0 160px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.vender-image {
    width: 240px;
    height: 240px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid #6c5ce7;
    box-shadow: 0 4px 16px rgba(44,62,80,0.12);
}

.vender-content {
    flex: 1;
}

.vender-content h2 {
    font-size: 2rem;
    color: #6c5ce7;
    margin-bottom: 8px;
    font-weight: 700;
}

.label {
    font-weight: 600;
    color: #636e72;
}

.rating-badge {
    background: #ffeaa7;
    color: #fdcb6e;
    padding: 3px 10px;
    border-radius: 12px;
    font-size: 1.1em;
    margin-left: 6px;
    font-weight: 600;
    letter-spacing: 1px;
}

.green { color: #00b894; }
.red { color: #d63031; }

.menu-link {
    display: inline-flex;
    align-items: center;
    background: #6c5ce7;
    color: #fff;
    padding: 6px 16px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 500;
    margin: 10px 0;
    transition: background 0.2s;
}
.menu-link:hover {
    background: #341f97;
}
.menu-icon {
    margin-right: 6px;
    font-size: 1.2em;
}

.description-box {
    background: #f1f2f6;
    border-radius: 8px;
    padding: 12px;
    margin: 14px 0;
    color: #636e72;
    font-size: 1.05em;
    box-shadow: 0 2px 8px rgba(44,62,80,0.07);
}

.action-buttons {
    display: flex;
    gap: 18px;
    align-items: center;
    margin-top: 18px;
}

.btn {
    background: linear-gradient(90deg, #6c5ce7 0%, #00b894 100%);
    color: #fff;
    border: none;
    border-radius: 8px;
    padding: 10px 22px;
    font-size: 1.1em;
    font-weight: 600;
    cursor: pointer;
    box-shadow: 0 2px 8px rgba(44,62,80,0.09);
    transition: background 0.2s, transform 0.2s;
}
.btn:hover {
    background: linear-gradient(90deg, #341f97 0%, #00b894 100%);
    transform: translateY(-2px) scale(1.03);
}

.fav-btn img {
    width: 32px;
    height: 32px;
    transition: transform 0.2s;
}
.fav-btn img:hover {
    transform: scale(1.15);
}

.reviews-box-trigger {
    margin-left: 10px;
}
.Rbtn {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
}
.Rbtn img {
    width: 32px;
    height: 32px;
    transition: transform 0.2s;
}
.Rbtn img:hover {
    transform: scale(1.2) rotate(-10deg);
}

.reviews-panel {
    position: fixed;
    top: 50%;
    left: 50%;
    width: 480px;
    max-width: 95vw;
    background: #fff;
    border-radius: 18px;
    box-shadow: 0 8px 32px rgba(44,62,80,0.18);
    padding: 28px 22px 18px 22px;
    transform: translate(-50%, -50%);
    z-index: 1000;
    transition: opacity 0.3s;
}
.reviews-panel.hidden {
    display: none;
}

.review_list {
    max-height: 220px;
    overflow-y: auto;
    margin-bottom: 10px;
}

.review-item {
    background: #f1f2f6;
    border-radius: 8px;
    padding: 10px;
    margin-bottom: 10px;
    box-shadow: 0 1px 4px rgba(44,62,80,0.07);
}

.overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3); /* slight dark overlay */
  z-index: 98; /* Just below the review panel */
  pointer-events: all;
}
.hidden {
  display: none;
}
.organizer-box,
.attendees-section {
  background: #fafafa;
  border-radius: 12px;
  padding: 20px;
  margin-top: 24px;
  border-left: 4px solid #00c9a7;
  width: fit-content;
  max-width: 100%;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.04);
}

.organizer-profile {
  display: flex;
  align-items: center;
  gap: 16px;
  margin-top: 14px;
}

.organizer-img {
  width: 70px;
  height: 70px;
  object-fit: cover;
  border-radius: 50%;
  border: 3px solid #d63384;
}

.organizer-info p {
  margin: 4px 0;
  font-size: 14px;
}

.attendee-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  margin-top: 10px;
}

.attendee-card {
  text-align: center;
  width: 75px;
  p{
    margin-top: 0;
  }
}

.attendee-img {
  width: 60px;
  height: 60px;
  object-fit: cover;
  border-radius: 50%;
  border: 2px solid #ccc;
  /* margin-bottom: 6px; */
}

.add_btn, .submit_btn {
    background: linear-gradient(90deg, #6c5ce7 0%, #00b894 100%);
    color: #fff;
    border: none;
    border-radius: 8px;
    padding: 8px 18px;
    font-size: 1em;
    font-weight: 600;
    cursor: pointer;
    margin-top: 8px;
    transition: background 0.2s, transform 0.2s;
}
.add_btn:hover, .submit_btn:hover{
    background: linear-gradient(90deg, #341f97 0%, #00b894 100%);
    transform: scale(1.04);
}

.review-form-popup {
    position: fixed;
    top: 55%;
    left: 50%;
    width: 340px;
    max-width: 90vw;
    background: #fff;
    border-radius: 14px;
    box-shadow: 0 8px 32px rgba(44,62,80,0.18);
    padding: 22px 18px 18px 18px;
    transform: translate(-50%, -50%);
    z-index: 1100;
}
.review-form-popup.hidden {
    display: none;
}
.review-form-popup textarea {
    width: 100%;
    min-height: 60px;
    border-radius: 8px;
    border: 1px solid #b2bec3;
    padding: 8px;
    margin-bottom: 10px;
    font-size: 1em;
    resize: vertical;
}
.review-form-popup input[type="number"] {
    width: 100%;
    border-radius: 8px;
    border: 1px solid #b2bec3;
    padding: 8px;
    margin-bottom: 10px;
    font-size: 1em;
}

.back-btn {
    margin-top: 24px;
    background: linear-gradient(90deg, #00b894 0%, #6c5ce7 100%);
}

@media (max-width: 700px) {
    .mainDabba {
        padding: 12px 4px;
    }
    .vender-details-container {
        flex-direction: column;
        gap: 12px;
    }
    .vender-image-wrapper {
        justify-content: flex-start;
    }
    .reviews-panel, .review-form-popup {
        width: 98vw;
        padding: 12px 4px;
    }
}
.menu-panel {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  max-width: 800px;
  background: #fff;
  border-radius: 16px;
  box-shadow: 0 4px 25px rgba(0,0,0,0.2);
  padding: 20px;
  z-index: 1000;
  overflow-y: auto;
  max-height: 90vh;
}

.menu-panel .close-btn {
  position: absolute;
  top: 15px;
  right: 20px;
  border: none;
  background: transparent;
  font-size: 20px;
  cursor: pointer;
  color: #333;
}

.all-days-container {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.day-section {
  border: 1px solid #eee;
  padding: 15px;
  border-radius: 12px;
  background: #fafafa;
}

.day-title {
  margin-bottom: 10px;
  color: #6c5ce7;
  font-weight: 600;
  font-size: 1.2rem;
}

/* ✅ FIX: align lunch & dinner properly */
.meal-container {
  display: grid;
  grid-template-columns: 1fr 1fr; /* two equal columns */
  gap: 20px;
  align-items: stretch; /* keep both meal boxes same height */
}

.meal-box {
  display: flex;
  align-items: flex-start;
  gap: 10px;
  background: #fff;
  border-radius: 12px;
  padding: 12px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.05);
}

.meal-box img {
  width: 70px;
  height: 70px;
  border-radius: 10px;
  object-fit: cover;
}

.meal-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.meal-info p {
  margin: 4px 0;
  font-size: 0.95rem;
  color: #555;
}

/* 📱 Responsive: stack lunch & dinner vertically */
@media (max-width: 700px) {
  .meal-container {
    grid-template-columns: 1fr; /* stack */
  }
}

<%-include('../partials/head')%>
<%-include('../partials/background')%>
<style>
body {
    background: linear-gradient(to bottom, #fffde7, #fff9c4);
    color: #333;
}
h1 {
    text-align: center;
    margin: 1rem 0;
    color: #ff5a5f;
    text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
}
.grid-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    padding: 1rem;
}
.card {
    background: rgba(255, 255, 255, 0.2); /* semi-transparent */
    border-radius: 15px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.2);
    padding: 1rem;
    transition: transform 0.3s, box-shadow 0.3s;
    backdrop-filter: blur(12px) saturate(180%); /* glass effect */
    -webkit-backdrop-filter: blur(12px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.3);
}
.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.2);
}
.card h3 {
    margin-bottom: 0.75rem;
    text-align: center;
    color: #ff5a5f;
}
.meal-section {
    margin-bottom: 1rem;
}
.meal-section h4 {
    font-size: 1rem;
    margin-bottom: 0.5rem;
    color: #444;
    text-align: center;
}
.meal-content {
    display: flex;
    align-items: center;
    gap: 1rem;
}
.meal-content img {
    width: 120px;
    height: 120px;
    object-fit: cover;
    border-radius: 50%;
}
.meal-content p {
    flex: 1;
    text-align: left;
    font-size: 0.95rem;
    color: #555;
}
.meal-section hr {
    border: none;
    border-top: 1px solid #ddd;
    margin: 1rem 0;
}
.top-bar {
    display: flex;
    justify-content: flex-end;
    margin-bottom: 1rem;
}
#addVenders {
    background: linear-gradient(45deg, #ff5a5f, #ff7e7e);
    color: white;
    padding: 12px 24px;
    border: none;
    border-radius: 30px;
    cursor: pointer;
    font-size: 16px;
}
#addVenders:hover {
    background: linear-gradient(45deg, #e0484d, #ff5a5f);
}
</style>

<%-include('../partials/nav')%>

<!-- Single Grid for all 7 days -->
<div class="grid-container">
    <% const days = ["Monday","Tuesday","Wednesday","Thursday","Friday","Saturday","Sunday"]; %>
    <% days.forEach(day => { 
        const lunchMeal = mealsList[0]?.meals?.[day.toLowerCase()]?.lunch || {};
        const dinnerMeal = mealsList[0]?.meals?.[day.toLowerCase()]?.dinner || {};
    %>
    <div class="card">
        <h3><%= day %></h3>

        <!-- Lunch -->
        <div class="meal-section">
            <h4>Lunch</h4>
            <div class="meal-content">
                <img src="<%= lunchMeal.image || '/default1.jpeg' %>" alt="<%= day %> Lunch">
                <p><%= lunchMeal.items?.join(", ") || "Not Available" %></p>
            </div>
            <hr>
        </div>

        <!-- Dinner -->
        <div class="meal-section">
            <h4>Dinner</h4>
            <div class="meal-content">
                <img src="<%= dinnerMeal.image || '/default1.jpeg' %>" alt="<%= day %> Dinner">
                <p><%= dinnerMeal.items?.join(", ") || "Not Available" %></p>
            </div>
        </div>
    </div>
    <% }) %>
</div>
</body>
</html>
